<%# The Notification Card %>
<div id="<%= dom_id(notification) %>" class="p-1 <%= 'bg-shade' if notification.unread? %>">
  <%# Point the link to notification_path(@notification) %>
  <%= link_to notification_path(notification), class: "block p-2 popover__item rounded-md" do %>
    <div class="flex flex-col gap-half">
      <p class="font-semibold text-sm"><%= notification.event.message %></p>
      <p class="text-xs text-subtle"><%= time_ago_in_words(notification.created_at) %> ago</p>
    </div>
  <% end %>
</div>