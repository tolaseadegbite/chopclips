<div id="<%= dom_id(notification) %>" class="p-1">
  <%= link_to notification_path(notification), class: "block p-2 popover__item rounded-md #{'bg-shade' if notification.unread?}" do %>
    <div class="flex items-center gap">
      
      <%# Single Avatar: either User (Circle/Teal) or Workspace (Square/Black) %>
      <div class="flex flex-item-no-shrink items-center justify-center font-bold text-xs text-reversed <%= notification_avatar_style(notification) %>" 
           style="inline-size: 2rem; block-size: 2rem;">
        <%= notification_avatar_initials(notification) %>
      </div>

      <div class="flex flex-col gap-half">
        <p class="font-semibold text-sm text-primary leading-tight">
          <%= notification_message(notification) %>
        </p>
        <p class="text-xs text-subtle">
          <%= time_ago_in_words(notification.created_at) %> ago
        </p>
      </div>

    </div>
  <% end %>
</div>